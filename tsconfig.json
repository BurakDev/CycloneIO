{
    "compilerOptions": {
      "baseUrl": ".",
      "target": "esnext",
      "module": "commonjs",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "strict": true,
      "strictNullChecks": false,
      "isolatedModules": false,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "paths": {
        "*": [
          "*",
          "./types/*"
        ]
      },
      "outDir": "./build"
    },
    "exclude": [
      "node_modules"
    ]
  }